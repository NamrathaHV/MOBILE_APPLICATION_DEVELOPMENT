<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/visiting_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B57D3F87"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:context=".MainActivity">

        <RelativeLayout
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="133dp">

                <TextView
                        android:id="@+id/textView1"
                        android:layout_width="327dp"
                        android:layout_height="111dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="false"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="80dp"
                        android:text="BIGHIT MUSIC"
                        android:textAlignment="center"
                        android:textColor="#050505"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="109dp"
                        android:layout_height="77dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="-45dp"
                        android:layout_marginRight="30dp"
                        android:layout_toEndOf="@+id/textView1"
                        app:srcCompat="@drawable/bighit_music" />
        </RelativeLayout>

        <View
                android:id="@+id/view2"
                android:layout_width="370dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="#AF2554" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="30dp"
                android:text="Namratha H V"
                android:textAlignment="center"
                android:textColor="#0E143A"
                android:textSize="30sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:text="CEO,HQ &amp; Management"
                android:textAlignment="center"
                android:textColor="#0E143A"
                android:textSize="20sp"
                android:textStyle="bold" />

        <View
                android:id="@+id/view1"
                android:layout_width="370dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#090909" />

        <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:text="+82-02-3444-0105"
                android:textAlignment="center"
                android:textColor="#0E143A"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="359dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:text="#42 Teheran-ro 108-gil, Daechi-dong,Gangnam-gu, Seoul, South Korea"
                android:textAlignment="center"
                android:textColor="#0E143A"
                android:textSize="20sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingTop="10dp"
                android:text="namratha_bighitcorp@gmail.com, https://bighitcorp.com"
                android:textAlignment="center"
                android:textColor="#0E143A"
                android:textSize="20sp"
                android:textStyle="bold" />
</LinearLayout>